<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000A25">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:fontFamily="cursive"
        android:text="@string/welcome_attendee"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@drawable/attendeeimage"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="#000A25"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="2"
        android:layout_below="@id/imageView13"
        android:layout_centerHorizontal="true">

        <!-- Events -->
        <FrameLayout
            android:id="@+id/events_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/myeventsbutton" />
        </FrameLayout>

        <!-- Map -->
        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/browseeventsbutton" />
        </FrameLayout>

        <!-- Calendar -->
        <FrameLayout
            android:id="@+id/calendar_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/notificationsbutton" />
        </FrameLayout>

        <!-- Profile -->
        <FrameLayout
            android:id="@+id/profile_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/myprofilebutton" />
        </FrameLayout>
    </GridLayout>
</RelativeLayout>